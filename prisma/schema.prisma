generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Office {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  address   String
  city      String
  name      String
  shortName String @unique
  state     String
  zipCode   String

  @@map("offices")
}

model Announcement {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  imageName String

  @@map("announcements")
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  title     String
  content   String
  images    String[]
  createdAt DateTime @default(now())

  @@map("posts")
}

model Event {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  officeLocationId String  // Store the Office ObjectId here
  description    String
  tags           String[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("events")
}